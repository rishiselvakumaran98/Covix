<%- include("../partials/header")%>

<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= blog.title%></div>
	<form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="title" value="<%=blog.title%>" required>
		</div>
		<div class="form-group">
			<label for="topic">Choose a topic:</label>
			<!-- <input class="form-control" type="text" name="topic" placeholder="topic"> -->
			<select id="topics" name="topic" size="4" multiple>
			  <option value="web-development">Web-development</option>
			  <option value="AI">AI and/or ML</option>
			  <option value="data-science">Data Science</option>
			  <option value="internship-advice">Internship Advice</option>
			</select>
		</div>
		<div class="field">
			<label>Paste your Image here</label>
			<input title="Only web images ending with jpg,png are allowed." type="text" name="image" value="<%=blog.image%>" required>
		</div>
		<div class="field">
			<label>Your blog description</label>
			<textarea name="description"><%=blog.description%></textarea required>
		</div>
		
		<button class="ui blue big inverted button">Save</button>
	</form>
</div>

<%- include("../partials/footer")%>