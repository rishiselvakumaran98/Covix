<%- include("partials/header")%>
<div class="container">
        <div style="width:30%; margin: 50px auto;">
            <h1 style="text-align: center">Login</h1>
            <form action="/login" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="email">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Login</button>
                </div>
            </form>
            <a class="btn btn-primary btn-block" href="/forgot">Forgot Password?</a>

        </div>
        <div style="width:30%; margin: 50px auto;">
            <h2>Not a user yet? Sign Up!</h2>
            <a href="/register" class="btn btn-primary btn-lg btn-block">Sign Up</a>
        </div>
        <div style="width:30%; margin: 25px auto;">
            <a href="/blogs" class="btn btn-warning btn-sm">Go Back</a>
        </div>
    </div>

<%- include("partials/footer")%>